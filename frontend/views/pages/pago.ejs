<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>Document</title>
</head>
<body>

    <a href="landing" class="btn-back">‹Regresar</a>


   

        <div id="listaLibros">

        </div>


    
        <div class="container mt-5 mb-5">
            <div class="row">
                <!-- Formulario -->
                <div class="col-lg-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="text-center">Información para el envío</h3>
                            <form id="formulario-envio" method="get" action="/realizarcompra">
                                <!-- Nombre y celular -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="nombreEnvio" class="form-label">Nombre</label>
                                        <input type="text" class="form-control" name="nombreEnvio" id="nombreEnvio"  required >
                                    </div>
                                    <div class="col-md-6">
                                        <label for="cedula" class="form-label">cedula</label>
                                        <input type="number" class="form-control" name="cedula" id="cedula"  required >
                                    </div>
                                    <div class="col-md-6">
                                        <label for="telefonoEnvio" class="form-label">Celular</label>
                                        <input type="tel" class="form-control" name="telefonoEnvio" id="telefonoEnvio" required>
                                    </div>
                                </div>
                                <!-- Correo electrónico -->
                                <div class="mb-3" id="datosCompra">
                                    <label for="emailEnvio" class="form-label">Correo electrónico</label>
                                    <input type="email" class="form-control" id="emailEnvio" name="emailEnvio"  required >
                                </div>
                                <!-- Dirección de envío -->
                                <div class="mb-3">
                                    <label for="direccion-envio" class="form-label">Dirección de envío</label>
                                    <input type="text" class="form-control" required>
    
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Enviar</button>
                            </form>
                        </div>
                    </div>
                </div>

                <script>


                    let carritoCompras = JSON.parse(localStorage.getItem("Micarrito")) || [];

                    let cadena = "";

                    carritoCompras.forEach(element => {

                        
                        cadena  +="<div class='card'>"+"<img src='"+element.imagen+"' alt='..' width='150px' height='100px'>"+"<div class='card-body'>"+"<h5 class='card-title'>"+element.titulo+"</h5>"+"<p class='card-text'>"+"<p>Precio: "+element.precio +"</p></div></div>";
                    }); 

                    document.getElementById("listaLibros").innerHTML = cadena;


                </script>

</body>
</html>